<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <!-- 주석처리 -->
    <entry key="insertCategory">
    	INSERT
    	  INTO TBL_CATEGORY
    	VALUES
    	(
    	  SEQ_CATEGORY_CODE.NEXTVAL
    	, ?
    	, ?
    	)
    </entry>
    <entry key="insertMenu">
    	INSERT
    	  INTO TBL_MENU 
    	VALUES
    	(
    	  SEQ_MENU_CODE.NEXTVAL
    	, ?
    	, ?
    	, ?
    	, ?
    	)
    </entry>
    <entry key="getCurrentSequence">
    	SELECT
    	       SEQ_CATEGORY_CODE.CURRVAL
    	  FROM DUAL
    </entry>
   <entry key="selectHabitInfo">
	   SELECT 
	          USER_ID
	        , HABIT_ID
	        , HABIT_NAME
	        , HABIT_TYPE
	        , HABIT_GOAL
	        , HABIT_DAYS
	     FROM HBT_REGISTER
	    WHERE HABIT_ID = ?
   </entry>
   <entry key="insertRecord">
       INSERT
         INTO HBT_CHECK
       VALUES
            (
              ?
            , ?
            , ?
            , ?   
            )  
   </entry>
   <entry key="selectDateInfo">
        SELECT 
               HABIT_ID
             , DO_DATE 
          FROM HBT_CHECK 
         WHERE HABIT_ID = ?
           AND DO_DATE = ?
   </entry>
   <entry key="updateCheck">
       UPDATE
              HBT_CHECK
          SET COUNT_CHECK = ?
        WHERE HABIT_ID = ?
          AND DO_DATE = ?
   </entry>
   <entry key="login">
       SELECT
              user_id
         FROM hbt_user
        WHERE user_name = ?
          AND user_pwd = ?
   </entry>
   <entry key="registerUser">
       INSERT
         INTO hbt_user
       VALUES
       (
         seq_user_id.nextval
       , ?
       , ?
       , ?
       , ? 
       )
   </entry>
   <entry key="checkUsername">
       SELECT
              user_name
         FROM hbt_user
        WHERE user_name = ?
   </entry>
   
</properties>